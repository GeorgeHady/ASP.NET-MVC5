@model Home_Budget_Manage.Models.Users

@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<hr /><br />


@using (Html.BeginForm())
{


    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Email or User name", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.Editor("email_or_userName", "", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Password", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.Password("password", "", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Log in" class="btn btn-default" />
            </div>
        </div>

        <div>
            @Html.ActionLink("Register as a new user", "Register")
        </div>

        <div>
            @Html.ActionLink("Back to Home", "Index")
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}