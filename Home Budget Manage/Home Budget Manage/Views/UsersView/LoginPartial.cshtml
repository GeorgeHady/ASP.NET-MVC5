@*@model Home_Budget_Manage.Models.Users*@


<div class="panel panel-default">

    <div class="col-md-offset-2 col-md-10">
        <h2>Log in</h2>
    </div>
    <div class="col-md-offset-0 col-md-11">
        <hr />
    </div>

    <div class="panel-body">

        @using (Html.BeginForm())
        {

            @*@Html.AntiForgeryToken()*@

            <div class="form-horizontal">
                <div class="form-group">
                    @Html.Label("Email or User name", new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.Editor("email_or_userName", "", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Password", new { @class = "col-md-4 control-label" })
                    <div class="col-md-8">
                        @Html.Password("passwordLogin", "", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

